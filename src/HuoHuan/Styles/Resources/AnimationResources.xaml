<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xf="clr-namespace:XamlFlair;assembly=XamlFlair.WPF">
    <!--旋转放大-->
    <xf:AnimationSettings x:Key="ScaleRotationAnimation"
                          Kind="RotateFrom,ScaleYFrom,ScaleXFrom,TranslateXFrom,BlurTo"
                          Rotation="-720"
                          ScaleX="0.05"
                          ScaleY="0.05" />
    <!--左翻页效果-->
    <xf:AnimationSettings x:Key="LeftTurnPageAnimation"
                          Kind="RotateFrom,TranslateXFrom,ScaleYFrom,ScaleXFrom"
                          Rotation="-180"
                          ScaleX="0.5"
                          ScaleY="0.5" />
</ResourceDictionary>